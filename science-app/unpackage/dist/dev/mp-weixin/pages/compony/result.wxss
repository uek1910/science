
.card{
	width:702rpx;
	height:491rpx;
	margin:0 auto;
	margin-top:41rpx;
	box-shadow: 0rpx 0rpx 15rpx #ccc;
}
.title{
		font-size:42rpx;
		color:#4a4c57;
		padding-top:64rpx;
		margin-left:48rpx;
}
.card_btn{
	width:124rpx;
	height:36rpx;
	background-color:#20c8bb;
	border-radius:18rpx;
	font-size:20rpx;
	color:#fff;
	text-align:center;
	line-height:36rpx;
	margin-left:48rpx;
	margin-top:21rpx;
}
.card .card-con{
	margin-left:48rpx;
	margin-top:95rpx;
	font-size:28rpx;
	font-weight:600;
	letter-spacing: 2rpx;
}
.card .card-con ._p{
	width:100%;
	height:62rpx;
}
.card .card-con ._i{
	display:block;
	width:12rpx;
	height:5rpx;
	background-color:#fdab3e;
	border-radius:6rpx;
	margin-top:18rpx;
	margin-right:14rpx;
	float:left;
}
.card .card-con .fixed{
	color:#a5a7af;
}
.card .card-con ._span{
	color:#4a4c57;
}
.res{
	width:615rpx;
	height:auto;
	overflow: hidden;
	margin:0 auto;
	margin-top:69rpx;
}
.produce{
	width:100%;
	height:auto;
	overflow: hidden;
	border-bottom:2px solid #f7f7f7;
	margin-bottom:60rpx;
}
.art .con-title{
	height:54rpx;
	font-size:26rpx;
	color:#a5a7af;
}
.art .inscribe{
	float:right;
	text-align:right;
	margin-top:97rpx;
	margin-bottom:57rpx;
}
.art .content,
.inscribe .name{
	font-size:24rpx;
	color:#565970;
	line-height:36rpx;
	letter-spacing: 1.5rpx;
}
.inscribe{
	font-size:20rpx;
	color:#a4a5ab;
}

