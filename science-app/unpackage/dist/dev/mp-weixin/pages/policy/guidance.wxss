
page{
	background: #fcfcfc;
}
.policy_body{
	background: #fcfcfc;
	width: 703rpx;
	height: auto;
	overflow: hidden;
	margin: 0 auto;
}
/* 导航开始 */
.policy_nav{
	margin: 0 auto;
	font-size: #fff;
	background: #fcfcfc;
}
.nav_title{
	float: left;
	font-size: 24rpx;
	padding:64rpx 68rpx;
	color: #9597a5;
	position: relative;
}
.active ::before{
	width:17rpx;
	height: 2rpx;
	background: #ffab3e;
	color: #2c304c;
	content: "";
	position: absolute;
	top:12rpx;
	left:36rpx;
}
/* 导航结束 */
/* 主图开始 */
.policy_guidance{
	width: 658rpx;
	height: 802rpx;
	margin: 0 auto;
	margin-bottom: 90rpx;
}
.policy_body .guidance_img{
	width: 100%;
	height:100%;
}
/* 主图结束 */
